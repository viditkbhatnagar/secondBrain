{
    "name": "knowledge-base-backend",
    "version": "1.0.0",
    "description": "Backend for Personal Knowledge Base with AI Search",
    "main": "dist/server.js",
    "scripts": {
        "start": "node dist/server.js",
        "dev": "ts-node-dev --respawn --transpile-only src/server.ts",
        "build": "npm install --production=false && tsc",
        "build:production": "npm run build:frontend && npm run build",
        "build:frontend": "cd ../frontend && npm install && npm run build",
        "postbuild": "mkdir -p dist/uploads",
        "test": "jest",
        "test:watch": "jest --watch",
        "test:coverage": "jest --coverage",
        "test:ci": "jest --ci --coverage --reporters=default",
        "db:flush": "ts-node scripts/flush-database.ts",
        "db:reset": "npm run db:flush",
        "seed:admin": "ts-node src/scripts/seedAdmin.ts"
    },
    "dependencies": {
        "@xenova/transformers": "^2.15.0",
        "bcryptjs": "^3.0.3",
        "compression": "^1.8.1",
        "compromise": "^14.14.0",
        "cors": "^2.8.5",
        "dotenv": "^16.4.0",
        "express": "^4.19.0",
        "express-mongo-sanitize": "^2.2.0",
        "express-rate-limit": "^8.2.1",
        "express-slow-down": "^3.0.1",
        "fs-extra": "^11.2.0",
        "helmet": "^8.1.0",
        "ioredis": "^5.8.2",
        "jsonwebtoken": "^9.0.3",
        "langchain": "^0.2.18",
        "lru-cache": "^11.2.4",
        "mammoth": "^1.7.0",
        "mongoose": "^8.8.0",
        "multer": "^1.4.5-lts.1",
        "openai": "^4.67.0",
        "pdf-parse": "^1.1.1",
        "pdfjs-dist": "^5.4.296",
        "swagger-jsdoc": "^6.2.8",
        "swagger-ui-express": "^5.0.0",
        "uuid": "^10.0.0",
        "winston": "^3.19.0",
        "winston-daily-rotate-file": "^5.0.0",
        "xss": "^1.0.15",
        "zod": "^3.22.0"
    },
    "devDependencies": {
        "@types/bcryptjs": "^2.4.6",
        "@types/compression": "^1.8.1",
        "@types/cors": "^2.8.17",
        "@types/express": "^4.17.21",
        "@types/express-slow-down": "^1.3.5",
        "@types/fs-extra": "^11.0.4",
        "@types/jest": "^29.5.14",
        "@types/jsonwebtoken": "^9.0.10",
        "@types/multer": "^1.4.12",
        "@types/node": "^20.0.0",
        "@types/pdf-parse": "^1.1.5",
        "@types/supertest": "^6.0.3",
        "@types/swagger-jsdoc": "^6.0.4",
        "@types/swagger-ui-express": "^4.1.8",
        "@types/uuid": "^10.0.0",
        "fast-check": "^4.5.3",
        "jest": "^29.7.0",
        "mongodb-memory-server": "^11.0.1",
        "supertest": "^7.1.4",
        "ts-jest": "^29.4.6",
        "ts-node-dev": "^2.0.0",
        "typescript": "^5.6.0"
    },
    "engines": {
        "node": ">=18.0.0"
    }
}

# AI API Configuration
ANTHROPIC_API_KEY=your_anthropic_api_key_here
OPENAI_API_KEY=your_openai_api_key_here

# MongoDB Configuration (MongoDB Atlas Free Tier)
MONGODB_URI=mongodb+srv://username:password@cluster0.xxxxx.mongodb.net/knowledge-base?retryWrites=true&w=majority

# Server Configuration
PORT=3001
NODE_ENV=development

# File Upload Configuration
MAX_FILE_SIZE=52428800  # 50MB in bytes
UPLOAD_DIR=./uploads

# Optional: Session Configuration
SESSION_SECRET=your-random-session-secret-key

# Optional: Rate Limiting
RATE_LIMIT_WINDOW_MS=900000  # 15 minutes
RATE_LIMIT_MAX_REQUESTS=100  # requests per window

# Optional: Analytics
ENABLE_ANALYTICS=true